<nav class=" font-poppins bg-gradient-to-b from-orange-100 to-bg-sand py-4 md:pb-10" x-data>
  <div class="container flex justify-between">
    <a class="tracking-widest text-2xl md:text-4xl xl:text-5xl" href="/"> Paloma + </br>Clay  </a>
  {# Desktop Nav #}
  <div class="hidden md:flex items-center capitalize md:text-md lg:text-2xl font-light gap-8  border-b-2 border-gray-700">
    {# page 1 | page 2 | page 3 etc #}
    {% for item in navigation %}
      <a
          class="{{ 'font-medium' if page.url == item.route }}"
          href="{{ item.route }}"
        >
        {{ item.name }}
      </a>
    {% endfor %}
  </div>
  <button class="md:hidden" @click="$store.nav.toggle()">
    <svg x-show="!$store.nav.isOpen" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"/>
    </svg>
    <svg x-show="$store.nav.isOpen" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
    </svg>
  </button>
</div>
{# Mobile Navigation #}
<nav
    class="border-t-2 border-b-2 leading-loose border-gray-600 container my-5 flex flex-col gap-3 capitalize md:hidden tracking-widest text-lg font-light "
    x-cloak
    x-show="$store.nav.isOpen"
     x-transition:enter="transition ease-out duration-500 ml-72"
                    x-transition:enter-start=""
                    x-transition:enter-end="transform -translate-x-72"
                    x-transition:leave="transition ease-out duration-300"
                    x-transition:leave-start=""
                    x-transition:leave-end="transform translate-x-72"
  >
  {% for item in navigation %}
    <a
        href="{{ item.route }}"
      >
      {{ item.name }}
      {{item.info}}
    </a>
  {% endfor %}
</nav>
</nav>